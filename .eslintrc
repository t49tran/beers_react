{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    //overriding the default list
    //0 = no error; 1 = warning; 2 = error
    //console = warning
    "no-console": 1,
    "no-unused-vars": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-param-reassign": 0,
    "func-names": 0,
    "validateLineBreaks": 0,
    "linebreak-style": 0,
    "indent": ["error", 2],
    "no-useless-computed-key": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "env": {
    "browser": true,
    "node": true
  }
}